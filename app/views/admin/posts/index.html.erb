<div class="box">
  <div class="box-header">
    <h3 class="box-title">Posts</h3>
    <button class="btn btn-success"><%= link_to 'New Post', new_admin_post_path %></button>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Autor</th>
          <th>Created at</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.category.name %></td>
            <td>Julio Lopez</td>
            <td><%= time_ago_in_words(post.created_at) %></td>
            <td>
              <div class="btn-group">
                <button type="button" class="btn btn-info">Action</button>
                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to 'Show', root_path + post.slug %></li>
                  <li><%= link_to 'Edit', edit_admin_post_path(post) %></li>
                  <li><%= link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Autor</th>
          <th>Created at</th>
          <th></th>
        </tr>
      </tfoot>
    </table>
  </div><!-- /.box-body -->
</div><!-- /.box -->