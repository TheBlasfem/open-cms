<!DOCTYPE html>
<html>
<head>
  <title>OpenCms</title>
  <!-- FontAwesome 4.3.0 -->
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
  <!-- Ionicons 2.0.0 -->
  <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css" />
  <!-- Medium Editor Styles -->
  <link rel="stylesheet" href="http://cdn.jsdelivr.net/medium-editor/latest/css/medium-editor.min.css" type="text/css" media="screen" charset="utf-8">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/medium-editor/5.3.0/css/themes/default.min.css" type="text/css" media="screen" charset="utf-8">

  <!-- Theme style -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="skin-blue sidebar-mini layout-editor">
  <%= form_for ["admin", @post] do |f| %>
    <div class="wrapper">
      <!-- Left side column. contains the logo and sidebar -->
      <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
          <!-- Sidebar user panel -->
          <div class="user-panel">
            <div class="pull-left image">
              <%= image_tag "user2-160x160.jpg", class: "img-circle" %>
            </div>
            <div class="pull-left info">
              <p>Julio Lopez</p>
              <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
          </div>
          <%= link_to 'Back', admin_posts_path %>
          <!-- sidebar menu: : style can be found in sidebar.less -->
          <ul class="sidebar-menu">
            <li class="header">OPTIONS</li>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
            <%= f.label :category_id %><br>
            <%= f.select :category_id, Category.all.map{|c| [c.name, c.id]} %>
            <%= f.submit %>
          </ul>
        </section>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
          <% if @post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

              <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <%= yield %>
        </section>

      </div><!-- /.content-wrapper -->
    </div><!-- ./wrapper -->
  <% end %>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!-- jQuery UI 1.11.4 -->
  <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js" type="text/javascript"></script>

  <!-- Medium Editor -->
  <script src="http://cdn.jsdelivr.net/medium-editor/latest/js/medium-editor.min.js"></script>
  <script>var editor = new MediumEditor('.editable', {
    placeholder: {
      text: 'Type your text',
    },
    autoLink: true
  });</script>
</body>
</html>
